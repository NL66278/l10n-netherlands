<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_partner_title_tree" model="ir.ui.view">
            <field name="model">res.partner.title</field>
            <field
                name="inherit_id"
                ref="l10n_nl_partner_name.view_partner_title_tree"
            />
            <field name="arch" type="xml">
                <field name="salutation" position="after">
                    <field name="postnominal" />
                </field>
            </field>
        </record>

        <record id="view_partner_title_form" model="ir.ui.view">
            <field name="model">res.partner.title</field>
            <field
                name="inherit_id"
                ref="l10n_nl_partner_name.view_partner_title_form"
            />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <group />
                </field>
                <field name="salutation" position="replace">
                    <group colspan="2">
                        <field name="salutation" />
                        <field name="salutation_male" />
                        <field name="salutation_female" />
                    </group>
                </field>

                <field name="shortcut" position="replace">
                    <group colspan="2">
                        <field name="shortcut" />
                        <field name="shortcut_male" />
                        <field name="shortcut_female" />
                    </group>
                    <group colspan="2">
                        <field name="postnominal" />
                    </group>
                </field>

            </field>
        </record>

    </data>
</openerp>
